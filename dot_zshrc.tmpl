
export DOTFILES="$HOME/.local/share/chezmoi"
export ZSH="$HOME/.oh-my-zsh"

PATH=/opt/homebrew/bin:$PATH:
PATH=$PATH:/opt/homebrew/sbin:
PATH=$PATH:$HOME/pco-box/bin
PATH=$PATH:/usr/local/bin
PATH=$PATH:/usr/local/sbin
PATH=$PATH:/usr/local/share/npm/bin
PATH=$PATH:/usr/local/bin/node_modules/.bin
PATH=$PATH:/usr/bin
PATH=$PATH:/bin
PATH=$PATH:/usr/sbin
PATH=$PATH:/sbin
PATH=$PATH:/usr/local/bin
PATH=$PATH:/opt/X11/bin
PATH=$PATH:$HOME/.cargo/bin

export ANDROID_SDK_ROOT=$HOME/Library/Android/sdk

PATH=$PATH:$ANDROID_SDK_ROOT/tools
PATH=$PATH:$ANDROID_SDK_ROOT/tools/bin
PATH=$PATH:$ANDROID_SDK_ROOT/emulator
PATH=$PATH:$ANDROID_SDK_ROOT/platform-tools

export PATH

{{- if eq .chezmoi.os "linux" }}
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)";
{{- end }}

plugins=(
  asdf
  git
  bundler
  colored-man-pages
  colorize
  macos
  pipenv
  rbenv
  ruby
  vscode
  zsh-autosuggestions
)

eval "$(rbenv init - zsh)";
eval "$($HOME/Code/pco/bin/pco init -)"
source $HOME/pco-box/env.sh

source $ZSH/oh-my-zsh.sh
. $DOTFILES/zsh/aliases.zsh
. $DOTFILES/zsh/functions.zsh

cdpath=($HOME/Code)

ZSH_COLORIZE_STYLE="monokai"

export TERM=xterm-256color # or screen-256color
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export PGDATA=/usr/local/var/postgres
export EDITOR="nvim"
export GIT_EDITOR="nvim"

{{- if eq .chezmoi.os "darwin" }}
export ARTIFACTORY_USER={{ onepasswordRead "op://chezmoi/Artifactory/username" }}
export ARTIFACTORY_API_KEY={{ onepasswordRead "op://chezmoi/Artifactory/credential" }}
export ARTIFACTORY_EMAIL={{ onepasswordRead "op://chezmoi/Artifactory/email" }}
export ARTIFACTORY_AUTH=$(echo -n "$ARTIFACTORY_USER:$(echo $ARTIFACTORY_API_KEY | base64 -D)" | base64)

export NYT_USER={{ onepasswordRead "op://chezmoi/NYT User/user" }}
export NYT_EMAIL={{ onepasswordRead "op://chezmoi/NYT User/email" }}

export PCO_CLOUDBOX_AFTER_PROVISION_SCRIPT_PATH=$DOTFILES/cloud-box-post-provision.sh
{{- end }}

eval "$(starship init zsh)"

